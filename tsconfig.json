{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "target": "ESNext"
  },
  "include": [
    ".nuxt/**/*",
    ".nuxt/**/*.d.ts",
    "app/**/*",
    "composables/**/*",
    "middleware/**/*",
    "nuxt.config.ts",
    "plugins/**/*",
    "server/**/*",
    "stores/**/*",
    "shared/**/*",
    "types/**/*",
    "types/**/*.d.ts"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
